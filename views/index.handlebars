<h1>BurgerApp</h1>

<h3>BurgerStart</h3>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  {{> burgers/burger_block devoured=true}}
  {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each cats}}
  {{#if sleepy}}
  {{> burgers/burger_block sleep=false}}
  {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form id="create-form">

  <div class="form-group">
    <label for="bg">Burger Name:</label>
    <input type="text" id="bg" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured">Sleepy?</label><br>
    <input type="radio" name="devoured" value="1" id="devoured" checked> Devoured<br>
    <input type="radio" name="devoured" value="0" id="awake"> Not Devoured
  </div>

  <button type="submit">Submit</button>
</form>